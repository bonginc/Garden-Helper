<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
     package="com.bonginc.gardenhelper"
	 android:versionName="1.0"
	 android:versionCode="1">
<uses-permission android:name="android.permission.VIBRATE"/> 
	<uses-sdk android:minSdkVersion="9"/>

    <application android:icon="@drawable/icon" android:label="Garden Helper">	    
		<activity android:name=".MainActivity" android:label="Garden Helper">   
			<intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
        	</intent-filter>
		</activity>
		<activity android:name=".intro" android:label="Garden Helper">   
			<intent-filter>
                <action android:name="com.bonginc.gardenhelper.INTRO"/>
                <category android:name="android.intent.category.DEFAULT"/>
        	</intent-filter>
		</activity>
	<activity android:name=".nutecalc" android:label="FoxFarm Nutrients">
			<intent-filter>
				<action android:name="com.bonginc.gardenhelper.NUTECALC"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
	
		<activity android:name=".weight" android:label="Weight Calculator">
			<intent-filter>
				<action android:name="com.bonginc.gardenhelper.WEIGHT"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>		
		<activity android:name=".timer" android:label="Timer">
			<intent-filter>
				<action android:name="com.bonginc.gardenhelper.TIMER"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
</application>
</manifest>
